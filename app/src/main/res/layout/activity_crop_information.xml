<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".crop_information">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/trending_bacground"
            android:layout_width="match_parent"
            android:layoutMode="opticalBounds"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nigetiv_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/crop_information"
                    android:textColor="@color/color_white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                app:columnCount="3"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/watermeloncrop"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:layout_height="100dp"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_back_dark_blue_15"
                        android:src="@drawable/watermelon"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tomatoescrop"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:layout_height="100dp"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_back_dark_blue_15"
                        android:src="@drawable/tomatoes"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/strawberriescrop"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:layout_height="100dp"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_back_dark_blue_15"
                        android:src="@drawable/strawberries"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/limecrop"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:layout_height="100dp"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_back_dark_blue_15"
                        android:src="@drawable/lime"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bananacrop"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:layout_height="100dp"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_back_dark_blue_15"
                        android:src="@drawable/banana"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mangocrop"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:layout_height="100dp"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_back_dark_blue_15"
                        android:src="@drawable/kesher_mango"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/onioncrop"
                    android:layout_width="100dp"
                    android:layout_margin="10dp"
                    android:layout_height="100dp"
                    >
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_back_dark_blue_15"
                        android:src="@drawable/onion"
                        />
                </LinearLayout>

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>